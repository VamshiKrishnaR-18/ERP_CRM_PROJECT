# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/erp_crm
# Or use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Token Expiration
RESET_TOKEN_EXP_MINUTES=15
VERIFICATION_TOKEN_EXP_HOURS=24

# CORS Configuration
# For development (frontend running on Vite default port):
CORS_ORIGIN=http://localhost:5173
# For production, use your actual frontend domain:
# CORS_ORIGIN=https://yourdomain.com
# For multiple origins, use comma-separated values:
# CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com

# AI Integration (Hugging Face API)
# Get your API key from: https://huggingface.co/settings/tokens
HF_API_KEY=your-huggingface-api-key

# File Upload Configuration (optional)
MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

